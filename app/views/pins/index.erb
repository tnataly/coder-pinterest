<div class="header">
  <h1>Learning to Code</h1>
  <h3>A Collection of Ruby on Rails Resources for Beginners</h3>
</div>
<hr/>
<div class="pins">
  <% @pins.each_slice(3) do |row| %>
    <div class="row">
      <% row.each do |pin| %>      
        <div class="pin-container col-md-4">
          <div class="pin">
            <div class="pin-header row">
              <div class="logo-thumbnail col-xs-3">
                  <% if "#{pin.resource_type}" == "rails" %>
                    <%= image_tag('rails-logo-thumbnail.png') %>
                  <% elsif "#{pin.resource_type}" == "ruby" %>
                    <%= image_tag('ruby-logo-thumbnail.png') %>                
                  <% end %>
              </div>
              <div class="col-xs-9">
                <h4>
                  <%= link_to "#{pin.title}", pin_by_name_path(slug: pin.slug), html_options = {target: "_blank", class: "url"} %>
                </h4>
                  <%= link_to "#{pin.url}", "#{pin.url}", html_options = {target: "_blank", class: "url"} %>
              </div>
            </div>
            <hr/>
            <p class="text"><%= "#{pin.text}" %></p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<hr/>