<div class="header">
  <h1>
    <i class="fa fa-laptop"></i>
    <%= "#{@pin.title}" %>
  </h1>
<br/>

</div>

<div class="row">
<div class="show-pin col-md-8">
  <p><%= "#{@pin.text}" %></p>
  <% unless @pin.image_file_name.nil? %>
    <p><%= image_tag @pin.image.url(:medium) %></p>
  <% end %>
  <hr/>
  <p>
    <b>Visit <%= "#{@pin.title}" %> at: </b>
    <%= link_to "#{@pin.url}", "#{@pin.url}", html_options = {target: "_blank", class: "url"} %>
  </p>
</div>
<div class="panel panel-info col-md-4">
    <div class="panel-heading">
      <h3 class="panel-title">This pin has been pinned by
        <%= "#{@users.count} users" %>
      </h3>
    </div>
    <div class="panel-body">
      <ul>
        <% @users.each do |user| %>
          <li> <%= user.first_name + " " + user.last_name %> </li>
        <% end %>
      </ul>
    </div>
    <div class="panel-footer">
        <%= link_to root_path, html_options = {class: "btn"} do %>
            <i class="fa fa-hand-o-left"></i> Back
        <% end %>

        <%= link_to edit_pin_path(@pin.id), html_options = {class: "btn"} do %>
            <i class="fa fa-pencil-square-o"></i> Edit
        <% end %>

      <%= render partial: "shared/repin_form", locals: {pin: @pin} %>

    </div>
</div>
</div>

</div>
<div class="row">
 
</div>